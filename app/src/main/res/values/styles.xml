<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#428BD3</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#F1F1F1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#221F1F</item>
    </style>

    <style name="MySwitchLight" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#D3BD42</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#F1F1F1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#221F1F</item>
    </style>

    <style name="MySwitchCobertura" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#343AD5</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#F1F1F1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#221F1F</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#36D59E</item>
    </style>

</resources>
